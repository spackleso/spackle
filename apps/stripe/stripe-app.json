{
  "id": "so.spackle.stripe",
  "version": "0.0.14",
  "name": "Spackle",
  "icon": "./icon.png",
  "permissions": [
    {
      "permission": "customer_read",
      "purpose": "Required to read customer subscription data"
    },
    {
      "permission": "event_read",
      "purpose": "Required to keep subscription statuses up-to-date"
    },
    {
      "permission": "plan_read",
      "purpose": "Required to read pricing data"
    },
    {
      "permission": "product_read",
      "purpose": "Required to read pricing data"
    },
    {
      "permission": "subscription_read",
      "purpose": "Required to read customer subscription data"
    }
  ],
  "app_backend": {
    "webhooks": []
  },
  "ui_extension": {
    "views": [
      {
        "viewport": "settings",
        "component": "AppSettings"
      },
      {
        "viewport": "stripe.dashboard.customer.detail",
        "component": "Customer"
      },
      {
        "viewport": "stripe.dashboard.product.detail",
        "component": "Product"
      }
    ],
    "actions": [],
    "content_security_policy": {
      "connect-src": [
        "https://www.spackle.so/api/stripe/"
      ],
      "image-src": null,
      "purpose": ""
    }
  },
  "post_install_action": {
    "type": "settings",
    "url": ""
  }
}